// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum Provider {
  GOOGLE
  LOCAL
}

model Session {
  sid    String   @id @default(uuid()) @db.VarChar(255)
  sess   Json     @db.Json
  expire DateTime @db.Timestamp(6)
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String?
  provider  Provider
  notified  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  hive      Hive[]
  role      Role     @default(USER)
}

model Hive {
  id          String     @id @default(uuid())
  name        String     @unique
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  description String     @default("")
  userHasAccess Boolean  @default(true)
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  beeData     HiveData[]
}

model HiveData {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  time        DateTime
  hive        Hive     @relation(fields: [hiveId], references: [id], onDelete: Cascade)
  hiveId      String
  tempBottomLeft Float?
  tempTopRight Float?
  tempOutside Float?
  pressure Float?
  humidityBottomLeft Float?
  humidityTopRight Float?
  humidityOutside Float?
  weight Float?
  magnetic_x Float?
  magnetic_y Float?
  magnetic_z Float?
}
