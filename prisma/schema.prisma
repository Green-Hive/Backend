generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum Provider {
  GOOGLE
  LOCAL
}

model Session {
  sid    String   @id @default(uuid()) @db.VarChar(255)
  sess   Json     @db.Json
  expire DateTime @db.Timestamp(6)
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String?
  provider  Provider
  notified  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  hive      Hive[]
  role      Role     @default(USER)
}

model Hive {
  id          String     @id @default(uuid())
  name        String     @unique
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  description String     @default("")
  user        User       @relation(fields: [userId], references: [id])
  userId      String
  beeData     HiveData[]
  // data        Json       @default("{}")
}

model HiveData {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  hive        Hive     @relation(fields: [hiveId], references: [id])
  hiveId      String
  temp        Float    @default(0) // Température de 0 à 360°c (float),
  hum         Float    @default(0) // Humidité de 0 à 100% (float)
  weight      Float    @default(0) // Poids en g (float)
  inclination Boolean  @default(false) // Si la ruche est droite ou non (boolean)timestamp   DateTime @default(now()) // Date des données relevées toute les 5 secondes (ISO 8601)
  lat         Float    @default(0)
  lng         Float    @default(0)
}
