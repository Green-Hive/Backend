{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "types": ["vitest/globals"],
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "noEmit": false,
  },
    "include": ["src/**/*"],
}
